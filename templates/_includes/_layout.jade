doctype html
html
  include _mixin
  head(lang="en")
    title #{$.title}
    meta(http-equiv="content-type", content="text/html; charset=UTF-8")
    meta(name="keywords", content="static,site,generator,html,markdown, jade, yaml")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
    meta(name="description", content="A static site generator that stands on the shoulders of giants.")
    link(rel="stylesheet", href="/css/style.css", type="text/css")
    block style
  body
    .header
      include _header
      block header

    .container
      block content

    .footer
      include _footer
    script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
    block script